<h1>Listing vehicles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Placa</th>
      <th>Anho fab</th>
      <th>Serie</th>
      <th>Nro motor</th>
      <th>Client</th>
      <th>Marca</th>
      <th>Modelo</th>
      <th>Departamento</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.name %></td>
        <td><%= vehicle.placa %></td>
        <td><%= vehicle.anho_fab %></td>
        <td><%= vehicle.serie %></td>
        <td><%= vehicle.nro_motor %></td>
        <td><%= vehicle.client.name %></td>
        <td><%= vehicle.marca.name %></td>
        <td><%= vehicle.modelo.name %></td>
        <td><%= vehicle.departamento.name %></td>
        <td><%= vehicle.color.name %></td>
        <td><%= link_to 'Show', vehicle %></td>
        <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
        <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

