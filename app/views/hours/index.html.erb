<h1>Listing hours</h1>

<table>
  <thead>
    <tr>
      <th>Local</th>
      <th>Worker</th>
      <th>Atention</th>
      <th>Dispon</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hours.each do |hour| %>
      <tr>
        <td><%= hour.local.name %></td>
        <td><%= hour.worker.name %></td>
        <td><%= hour.atention.strftime("%H:%M") %></td>
        <td><%= hour.dispon %></td>
        <td><%= link_to 'Show', hour %></td>
        <td><%= link_to 'Edit', edit_hour_path(hour) %></td>
        <td><%= link_to 'Destroy', hour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

